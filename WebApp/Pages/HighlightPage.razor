@page "/highlights"

@using System.Globalization
@using Core
@using WebApp.Components
@using WebApp.Service

@inject Service.HighlightServices.IHighlightService HighlightService
@inject Service.AuthServices.IAuthService AuthService
@inject IUserService UserService

<!--
    Highlights-side:
    - Viser highlights i et grid (med evt. billede)
    - Filtrering: s√∏g + fra/til dato
    - Privat highlights skjules for ikke-loggede brugere
    - Pagination hentes via API (GetPaged)
    - Modal: klik for at se billede i stor st√∏rrelse
-->

<div class="page-header">
    <h2>Highlights</h2>

    @* Kun loggede brugere kan tilf√∏je *@
    @if (CurrentUser is not null)
    {
        <button class="btn-add" @onclick="OpenAddModal">
            + Tilf√∏j highlight
        </button>
    }
</div>

@* Re-usable add/edit component (bruges ogs√• til redigering via Show(h)) *@
<AddHighlightComponent @ref="addComponent" OnHighlightAdded="HandleHighlightAdded" />

<!-- üîç Filtrering -->
<div class="filter-box">
    <div class="filter-item">
        <span class="icon-search">üîç</span>
        <input placeholder="S√∏g i highlights..."
               @bind="searchTerm"
               @bind:event="oninput" />
    </div>

    <div class="filter-item">
        <span class="icon-calendar">üìÖ</span>
        <input type="date" @bind="filterFrom" />
    </div>

    <div class="filter-item">
        <span class="icon-calendar">üìÖ</span>
        <input type="date" @bind="filterTo" />
    </div>
</div>

<!-- Highlights grid -->
<div class="highlight-grid">
    @foreach (var h in FilteredHighlights)
    {
        // Privat highlight: skjules for ikke-loggede brugere
        if (h.IsPrivate && CurrentUser is null)
            continue;

        <div class="highlight-card">
            @if (!string.IsNullOrEmpty(h.ImageUrl))
            {
                <div class="highlight-image">
                    <img src="@h.ImageUrl" alt="Highlight billede" />
                    <button class="expand-button"
                            title="Se i stor st√∏rrelse"
                            @onclick="() => OpenImageModal(h.ImageUrl)">
                        ‚õ∂
                    </button>
                </div>
            }

            <div class="highlight-body">
                <div class="highlight-title-row">
                    <h3 class="title">@h.Title</h3>

                    @if (h.IsPrivate)
                    {
                        <span class="highlight-private-label">Privat</span>
                    }
                </div>

                <p class="description">@h.Description</p>

                <div class="highlight-footer">
                    <span class="card-date">
                        @FormatDanishDate(h.Date)
                    </span>

                    @* Kun loggede brugere kan redigere/slette *@
                    @if (CurrentUser is not null)
                    {
                        <div class="actions">
                            <button class="icon-button blue" title="Redig√©r" @onclick="() => EditHighlight(h)">‚úèÔ∏è</button>
                            <button class="icon-button red" title="Slet" @onclick="() => ConfirmDelete(h)">üóëÔ∏è</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

<!-- Slet-bekr√¶ftelse -->
<ConfirmDeleteComponent @ref="confirmComponent"
                        OnConfirm="DeleteConfirmed"
                        OnCancel="CancelDelete"
                        Message="Er du sikker p√• at du vil slette dette highlight?" />

<!-- Billede-modal -->
@if (ExpandedImageUrl is not null)
{
    <div class="image-modal-backdrop" @onclick="CloseImageModal">
        <div class="image-modal-content" @onclick:stopPropagation>
            <button class="close-button" @onclick="CloseImageModal">x</button>
            <img src="@ExpandedImageUrl" alt="Udvidet billede" />
        </div>
    </div>
}

<!-- Pagination -->
@if (TotalPages > 1)
{
    <PaginationComponent CurrentPage="CurrentPage"
                         TotalPages="TotalPages"
                         OnPageChanged="LoadPage" />
}

@code {
    // ----------------------------
    // State (data + filter + paging)
    // ----------------------------

    private List<Highlight> Highlights = new();

    private string searchTerm = "";
    private DateTime? filterFrom = null;
    private DateTime? filterTo = null;

    private User? CurrentUser;

    private int CurrentPage = 1;
    private const int PageSize = 6;
    private int TotalCount = 0;
    private int TotalPages => (int)Math.Ceiling((double)TotalCount / PageSize);

    // Modal (billede i stor st√∏rrelse)
    private string? ExpandedImageUrl;

    // Component refs
    private AddHighlightComponent? addComponent;
    private ConfirmDeleteComponent? confirmComponent;

    // Delete-flow
    private Highlight? HighlightToDelete;

    // Cache (s√• vi ikke laver FindSystemTimeZoneById/CultureInfo for hvert render item)
    private static readonly TimeZoneInfo CopenhagenTz = TimeZoneInfo.FindSystemTimeZoneById("Europe/Copenhagen");
    private static readonly CultureInfo DanishCulture = new("da-DK");

    // ----------------------------
    // Computed view
    // ----------------------------

    /// <summary>
    /// Filtrerer de highlights vi allerede har hentet for den aktuelle side (pagination),
    /// og sorterer dem efter dato (nyeste f√∏rst).
    /// </summary>
    private IEnumerable<Highlight> FilteredHighlights => Highlights
        .Where(h =>
            (string.IsNullOrWhiteSpace(searchTerm)
             || (h.Title?.ToLower().Contains(searchTerm.ToLower()) ?? false)
             || (h.Description?.ToLower().Contains(searchTerm.ToLower()) ?? false))
            && (!filterFrom.HasValue || h.Date.Date >= filterFrom.Value.Date)
            && (!filterTo.HasValue || h.Date.Date <= filterTo.Value.Date)
        )
        .OrderByDescending(h => h.Date);

    // ----------------------------
    // Lifecycle
    // ----------------------------

    protected override async Task OnInitializedAsync()
    {
        // Bruger afg√∏r om knapper (tilf√∏j/rediger/slet) skal vises
        CurrentUser = await AuthService.GetCurrentUser();

        // Load f√∏rste side
        await LoadPage(1);
    }

    // ----------------------------
    // UI actions
    // ----------------------------

    private Task OpenAddModal()
    {
        addComponent?.Show();
        return Task.CompletedTask;
    }

    private void EditHighlight(Highlight highlight)
    {
        // Re-using samme modal til edit
        addComponent?.Show(highlight);
    }

    private void ConfirmDelete(Highlight highlight)
    {
        HighlightToDelete = highlight;
        confirmComponent?.Show();
    }

    private async Task DeleteConfirmed()
    {
        if (HighlightToDelete is null)
            return;

        await HighlightService.Delete(HighlightToDelete.Id);
        HighlightToDelete = null;

        // Bliv p√• samme side og refresh
        await LoadPage(CurrentPage);
    }

    private void CancelDelete()
    {
        HighlightToDelete = null;
    }

    private void OpenImageModal(string url)
    {
        ExpandedImageUrl = url;
    }

    private void CloseImageModal()
    {
        ExpandedImageUrl = null;
    }

    /// <summary>
    /// N√•r AddHighlightComponent siger "tilf√∏jet", s√• reloader vi side 1 (s√• du ser det med det samme).
    /// </summary>
    private async Task HandleHighlightAdded()
    {
        await LoadPage(1);
    }

    // ----------------------------
    // Paging
    // ----------------------------

    /// <summary>
    /// Henter en side via API (server-side paging).
    /// </summary>
    private async Task LoadPage(int page)
    {
        CurrentPage = page < 1 ? 1 : page;

        var result = await HighlightService.GetPaged(CurrentPage, PageSize);
        Highlights = result.Items.ToList();
        TotalCount = result.TotalCount;

        StateHasChanged();
    }

    // ----------------------------
    // Helpers
    // ----------------------------

    /// <summary>
    /// Formatterer dato p√¶nt p√• dansk i lokal timezone.
    /// </summary>
    private static string FormatDanishDate(DateTime utcDate)
    {
        var local = TimeZoneInfo.ConvertTimeFromUtc(utcDate, CopenhagenTz);
        return local.ToString("d. MMMM yyyy", DanishCulture);
    }
}
