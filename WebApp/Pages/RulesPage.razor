@page "/regler"

<h2>Spilleregler for Whist</h2>

<div class="rules-list clean">
    @foreach (var rule in rules.Select((text, index) => new { text, index }))
    {
        <div class="rule-line">
            <div class="rule-badge">@($"{rule.index + 1}")</div>
            <div class="rule-text">@rule.text</div>
        </div>
    }
</div>

